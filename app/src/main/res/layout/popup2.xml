<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    >

    <EditText
        android:id="@+id/edittime2"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/votersqueue"
        android:layout_width="312dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:ems="10"
        android:hint="@string/voters_in_queue_at_the_time_of_closing"
        android:inputType="number"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <Button
        android:id="@+id/confirm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edittime2"
        android:layout_alignTop="@+id/cancel2"
        android:text="Submit" />

    <Button
        android:id="@+id/cancel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edittime2"
        android:layout_marginTop="183dp"
        android:text="Cancel" />


</RelativeLayout>